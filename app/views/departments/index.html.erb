     <%= render "newuser",department: department%>
    <% end %>
    </table>
</div>

  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Modal Heading</h4>
         <!--  <button type="button" class="close" data-bs-dismiss="modal" id="close_model">&times;</button> -->
        </div>

        <!-- Modal body -->
