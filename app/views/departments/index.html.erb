      </div>

      <!-- Modal body -->
      <div class="modal-body" id ="model_body">
       
          
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal" id="close"=>Close</button>
      </div>

    </div>
  </div>
</div>
</div>












