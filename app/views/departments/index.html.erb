    <table class="table",id="userTables">
     
      <tr>
        <th> Departments</th>
        <th>count</th>
        <th>Action</th>
     </tr>
        <% @departments.each do |department| %>

     <%= render "newuser",department: department%>
    <% end %>
    </table>
</div>
