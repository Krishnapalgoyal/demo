<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <%= form_with url: departments_path do |form| %>
  <div class="card">
  <div class="card-body">

          <div class="mb-3">
          <%= form.label :name, { class: "form-label"} %><br>
          <%= form.text_field :name, { class: "form-control"} %>
        </div>

          <div class="mb-3">
          <%= form.label :jobroll, { class: "form-label"}  %><br>
          <%= form.text_area :jobroll, { class: "form-control"}%>
        </div>
           <%= form.submit "Submit",method: :POST, class: "btn btn-primary" %>

          </div>
        </div>
      <% end %>
        <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>