
          <%= form_with model: @department, remote: true do |form| %>
          <div class="card">
          <div class="card-body">

            <div class="mb-3">
            <%= form.label :name, { class: "form-label"} %><br>
            <%= form.text_field :name, { class: "form-control"} %>
           </div>

            <div class="mb-3">
            <%= form.label :jobroll, { class: "form-label"}  %><br>
            <%= form.text_area :jobroll, { class: "form-control"}%>
            </div>
             <%= form.submit "Submit", class: "btn btn-primary" %>
             </div>
          </div>
          <% end %>


