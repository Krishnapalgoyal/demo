<div class ="container">
  <div>
    <%= form_with(url: '/search', method: 'get', local: true) do %>
      <%= text_field_tag(:search) %>
      <%= submit_tag("Search")%>
       <%= link_to "All", employees_path, class:'btn btn-success float-right'%>
    <% end %>
    
  </div>
  <div>
      <h2>All Employee </h2>
  </div>
 <% if current_type %>
 <div class="table-responsive">
  <table class="table"id="userTables">
   <tr>
      <th> Employee name</th>
          <th>Designation</th>
   </tr>
      <div class = text-center>
         <%= will_paginate @employee %>
      </div>
      <% @employee.each do |employee| %>
      <tr>
        <td>
         <%= link_to employee.name, employee_path(employee.id) %>
        </td>
        <td>
         <%= Department.find(employee.department_id).name%>
        </td>
      </tr>
      <%end%>
       
  </table>
 </div>
 <%end%>
</div>
