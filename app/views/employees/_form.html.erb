<div class ="container border border-primary p-3">
  <%= form_with url: @path, model: @employee do |form| %>
    <div class="crad">
      <div class="crad-body">
        <div class="mb-3">
        <%= form.label :name %>
        <%= form.text_field :name ,class:"form-control"%>
          <% @employee.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
       </div>
       <div class="mb-3">
        <%= form.label :contact %>
        <%= form.number_field :contact ,class:"form-control"%>
          <% @employee.errors.full_messages_for(:contact).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      Addresses:
      <ul>
        <%= form.fields_for  :addresses do |addresses_form| %>
          <li>
            <%= addresses_form.label :c_address %>
            <%= addresses_form.text_field :c_address, class:"form-control" %>

            <%= addresses_form.label  :p_address %>
            <%= addresses_form.text_field :p_address, class:"form-control" %>
            
          </li>
        <% end %>
      </ul>
      <div class="mb-3">
        <%= form.label :email%>
        <%= form.email_field :email, class:"form-control" %>
          <% @employee.errors.full_messages_for(:email).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="mb-3">
        <%= form.label :type %>
        <%= form.text_field :type, class:"form-control"%>
        </div>
      <div class="mb-3">
        <%= form.label :password%>
        <%= form.password_field :password, class:"form-control" %>
          <% @employee.errors.full_messages_for(:password).each do |message| %>
          <div><%= message %></div>
        <% end %>
       </div>
       <div class="mb-3">
        <%= form.label :department %>
       <%= form.collection_select :department_id, Department.order(:name), :id, :name, class:"form-select"%></br>
      </div>
      <div class="mb-3">
        <%= form.label :profile_photo %>
        <%= form.file_field :avatar ,class:"form-control"%>
      </div>
        <%= form.submit class:"btn btn-primary"%>
      </div>
      </div>
  <%end%>
</div>