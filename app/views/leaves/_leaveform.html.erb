<%= form_with scope: :leave,   model: @leave do |form|%>
    <%=form.label :from_date%>
    <%=form.date_field :from_date%></br>
    <%=form.label :to_date%>
    <%=form.date_field :to_date%></br>
    <%=form.label :total_day%>
    <%=form.text_field :total_day%>

    <%=form.hidden_field :employee_id, value: current_user.id %>
    <%= submit_tag "Leave request" %>           
    <% end %>
    <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: name %>
  <% end %>